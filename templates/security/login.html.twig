{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <div class="signin">
        <h2 class="text-warnnig">veuillez vous connecter</h2>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <form method="post">
            <label for="inputEmail">Email</label>&nbsp;&nbsp;
            <input type="email" placeholder=" veuillez entrer votre adresse mail" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus></br>

            <label for="inputPassword">Mot de passe</label>
            <input   placeholder=" veuillez entrer votre mot de passe " type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-lg btn-primary" type="submit">Se connect√©</button>
        </form>

        <!-- Commenter ou supprimer les liens inutiles -->
        {#
        <div id="container">
            <a href="{{ path('reset_password') }}" style="margin-right: 0px; font-size: 15px; font-family: Tahoma, Geneva, sans-serif">Reset password</a>
            <a href="{{ path('forgot_password') }}" style="margin-right: 0px; font-size:px; font-family: Tahoma, Geneva, sans-serif">Forgot password</a>
        </div>
        #}

        <p>Vous n'avez pas de compte ? <a href="{{ path('app_register') }}" style="font-family: 'Play', sans-serif;">S'inscrire</a></p>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Play', sans-serif;
            /* background-color: #282c34; */
            background: url("/assets/logo2.jpg") no-repeat center center;
            background-size: cover;            
            color: #fff;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .signin {
            /* background: #333; */
    background-color: rgb(92, 92, 92);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 300px;
        }
        .signin h2 {
            margin: 0 0 20px;
            text-align: center;
        }
        .signin input[type="text"],
        .signin input[type="password"],
        .signin input[type="email"] {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 15px;
            border: none;
            border-radius: 4px;
        }
        .signin button {
            width: 100%;
            padding: 10px;
            background-color: #28a745;
            border: none;
            border-radius: 4px;
            color: #fff;
            font-size: 16px;
            cursor: pointer;
        }
        .signin button:hover {
            background-color: #218838;
        }
        a {
            text-decoration: none;
            color: yellow;
        }
        .text-warnnig{
                color: yellow;
                font-size: 20px;
    }
    </style>
{% endblock %}
